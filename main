    <h1 id="question">Zostaniesz mojƒÖ WalentynkƒÖ? ‚ù§Ô∏è</h1>
    <div id="heart" class="heart">‚ù§Ô∏è</div>
    <div class="buttons">
        <button onclick="showResult('yes')">Tak</button>
        <button onclick="showResult('no')">Nie</button>
    </div>
    <div id="result"></div>
    <img id="flowerImg" src="mis.jpg" alt="Mi≈õ">
    <img id="noImg" src="buzka.png" alt="Mi≈õ" style="display:none; width: 300px; height: auto;">

    <script>
        function showResult(answer) {
            const resultDiv = document.getElementById('result');
            const flowerImg = document.getElementById('flowerImg');
            const noImg = document.getElementById('noImg');
            const question = document.getElementById('question');
            const heart = document.getElementById('heart');

            question.style.display = 'none';

            if (answer === 'yes') {
                resultDiv.innerHTML = 'Dziƒôki! üåπüå∑üåº';
                resultDiv.style.color = 'green';
                flowerImg.classList.add('visible');
                noImg.style.display = 'none';
            } else {
                resultDiv.innerHTML = 'Lepiej siƒô zastan√≥w üòÖ';
                resultDiv.style.color = 'red';
                flowerImg.classList.remove('visible');
                noImg.style.display = 'block';
                heart.classList.add('broken');
                heart.innerHTML = 'üíî';
            }

            resultDiv.style.display = 'block';
        }
    </script>
